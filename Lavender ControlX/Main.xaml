            <Button 
                FontFamily="Webdings" 
                FontSize="18" 
                Content="Ñ"
                ToolTip="Manage Encryption Keys"
                CommandParameter="4"/>
            <Button 
                FontFamily="Webdings" 
                FontSize="18" 
                Content="@"
