                    </GridView>
                </ListView.View>
            </ListView>
            <TextBox x:Name="LogTextBox" Height="57" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" DockPanel.Dock="Bottom"/>
        </DockPanel>



    </DockPanel>
